
//Globals


cbuffer DayNightBuffer 
{
	float4 colourWeight;
}

TextureCube SkyMap[1];
SamplerState SkySampleType;

//Typedefs
struct PixelInputType
{
	float4 pos : SV_POSITION;
	float4 texCoord : TEXCOORD0;
};

//Pixel Shader
float4 SkySpherePixelShader(PixelInputType input) : SV_TARGET
{
	return SkyMap[0].Sample(SkySampleType, input.texCoord) * colourWeight;
}